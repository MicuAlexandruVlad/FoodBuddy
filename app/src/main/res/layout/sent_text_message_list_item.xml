<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

>
    
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:id="@+id/rl_message_body"
            android:background="@drawable/sent_message_body"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="16dp"
    >
        
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_message_text"
                android:layout_alignParentTop="true"
                android:maxWidth="240dp"
                android:minWidth="80dp"
                android:layout_marginTop="12dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                tools:text="A"
                
        />
        
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_message_text"
                android:layout_alignEnd="@id/tv_message_text"
        >
    
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_timestamp"
                    android:layout_centerVertical="true"
                    tools:text="16 : 02"
                    android:textColor="@color/sunsetOrange"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_alignParentStart="true"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
            />
    
            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/iv_seen"
                    android:src="@drawable/ic_seen"
                    android:tint="@color/sunsetOrange"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
            />
            
        </RelativeLayout>
        
    </RelativeLayout>

</RelativeLayout>